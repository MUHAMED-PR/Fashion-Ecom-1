		<script>
			function updateTotals() {
				// Calculate subtotal
				let subtotal = 0;
				const productPrices = document.querySelectorAll('.total-col');
				productPrices.forEach(priceElem => {
					subtotal += parseFloat(priceElem.innerHTML);
				});
		
				// Update subtotal and total
				document.getElementById('subTotal').innerHTML = subtotal;
				const shipping = document.querySelector('input[name="shipping"]:checked') ? 
					parseFloat(document.querySelector('input[name="shipping"]:checked').nextElementSibling.nextElementSibling.innerHTML) : 0;
				document.getElementById('summaryTotal').innerHTML = subtotal + shipping;
			}
		
			document.querySelectorAll('input[name="shipping"]').forEach(radio => {
				radio.addEventListener('change', updateTotals);
			});
		
			function remove(productId) {
				const cartElement = document.getElementById('cartElement');
				axios.get(`/removeCart/${productId}`)
					.then(response => {
						if (response.data.status) {
							cartElement.remove();
							updateTotals();
						}
					})
					.catch(error => {
						console.log(error);
					});
			}
		
			function quantity(index, productId) {
				const price = parseFloat(document.getElementById(`price-${index}`).innerHTML);
				const currentQuantity = parseInt(document.getElementById(`inc-${index}`).value);
				const total = currentQuantity * price;
				document.getElementById(`totalPrice-${index}`).innerHTML = total;
		
				const data = {
					currentQuantity: currentQuantity,
					productId: productId
				};
		
				axios.patch('/ProductQuantity', data)
					.then(response => {
						updateTotals();
					})
					.catch(error => {
						console.log('Error:', error);
					});
			}
		
			// Initial call to set the totals
			updateTotals();


			
		</script>
		


